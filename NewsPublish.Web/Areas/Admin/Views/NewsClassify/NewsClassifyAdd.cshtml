@{
    ViewBag.Title = "添加新闻类别";
}

<div class="pd-20">
    <div class="Huiform">
        <form method="post" id="addNewsClassify">
            <table class="table table-bg">
                <tbody>
                    <tr>
                        <th class="text-r">类别名称：</th>
                        <td><input type="text" style="width:300px" class="input-text" value="" placeholder="" id="name" name="name" datatype="*2-120" nullmsg="类别名称不能为空"></td>
                    </tr>
                    <tr>
                        <th class="text-r">排序：</th>
                        <td><input type="text" style="width:300px" class="input-text" value="0" placeholder="" id="sort" name="sort"></td>
                    </tr>
                    <tr>
                        <th class="text-r">备注：</th>
                        <td><input type="text" style="width:300px" class="input-text" value="" placeholder="" id="remark" name="remark"></td>
                    </tr>
                    <tr>
                        <th></th>
                        <td><button class="btn btn-success radius" type="button" onclick="addNewsClassify()"><i class="icon-ok"></i> 确定</button></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(".Huiform").Validform();
        function addNewsClassify() {
            var formData = new FormData(document.getElementById("addNewsClassify"));
            $.ajax({
                type: "post",
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                url: '/Admin/NewsClassify/AddNewsClassify',
                data: formData,
                success: function (data) {
                    if (data.code == 200) {
                        parent.reload();
                    } else {
                        alert(data.result);
                    }
                }
            });
        }
    </script>
}