@section Scripts{ 
    <script type="text/javascript">
        $(function () {
            getBanners();
            getTopNews();
            getTotalNewsCount();
            getNewCommentNewsList();
        });

        function getBanners() {
            $.ajax({
                url: "/home/getbanners",
                async: true,
                cache: false,
                success: function (result) {
                    if (result.code == 200) {
                        var len = result.data.length;
                        var bannerHtml = '<ol class="carousel-indicators">';
                        for (var i = 0; i < len; i++) {
                            if (i == 0) {
                                bannerHtml += '<li data-target="#focusslide" data-slide-to="' + i + '" class="active"></li>';
                            }
                            else {
                                bannerHtml += '<li data-target="#focusslide" data-slide-to="' + i + '" ></li>';
                            }
                        }
                        bannerHtml += '</ol>';
                        bannerHtml += '<div class="carousel-inner" role="listbox">';
                        for (var j = 0; j < len; j++) {
                            if (j == 0) {
                                bannerHtml += ' <div class="item active"><img src="' + result.data[j].image + '" class="img-responsive"> </div> ';
                            }
                            else {
                                bannerHtml += ' <div class="item"><img src="' + result.data[j].image + '" class="img-responsive"></div> ';
                            }
                        }
                        bannerHtml += '</div>';   

                        $("#focusslide").prepend(bannerHtml);
                    }
                }
            });
        }

        function getTopNews() {
            $.ajax({
                url: '/home/gettopnews',
                cache: false,
                success: function (result) {
                    if (result.code == 200) {
                        var len = result.data.length;
                        var newsHtml = "";
                        for (var i = 0; i < len; i++) {
                            newsHtml += '<article class="excerpt excerpt-1" style="">';
                            newsHtml += '<a class="focus" href = "/news/detail/' + result.data[i].id + '" title = "' + result.data[i].title + '" target = "_blank" > <img class="thumb" data-original="' + result.data[i].image + '" src="' + result.data[i].image + '" alt="' + result.data[i].title + '" style="display: inline;"></a>';
                            newsHtml += '<header><h2>';
                            newsHtml += '<a href="/news/detail/' + result.data[i].id + '" title="' + result.data[i].title + '" target="_blank">' + result.data[i].title + '</a>';
                            newsHtml += '</h2></header><p class="meta">';
                            newsHtml += '<time class="time"><i class="glyphicon glyphicon-time"></i> ' + result.data[i].publishDate + '</time>';
                            newsHtml += ' <a class="comment" title="评论" target="_blank"><i class="glyphicon glyphicon-comment"></i> ' + result.data[i].commentCount + '</a> </p>';
                            newsHtml += '<p class="note">' + result.data[i].contents + '</p>   </article >';
                        }
                        $("#content").append(newsHtml);
                    }
                }
            });
        }

        function getTotalNewsCount() {
            $.ajax({
                url: "/home/getTotalNewsCount",
                success: function (result) {
                    if (result.code == 200) {
                        var count = result.data;
                        $("#totalNewsCount").html(count);
                    }
                }
            });
        }

        function getNewCommentNewsList() {
            $.ajax({
                url: "/home/getNewCommentNewsList",
                async: true,
                cache: false,
                success: function (result) {
                    if (result.code == 200) {
                        var html = ' <h3>最新评论文章</h3>';
                        html += ' <ul>';
                        for (var i = 0; i < result.data.length; i++) {
                            html += ' <li><a title="' + result.data[i].title + '" href="/news/detail/' + result.data[i].id + '"><span class="thumbnail">';
                            html += '<img class="thumb" data-original="' + result.data[i].image + '" src="' + result.data[i].image + '" alt="' + result.data[i].title + '" style="display: block;"></span>';
                            html += '<span class="text">' + result.data[i].contents + '</span><i class="glyphicon glyphicon-time"></i>' + result.data[i].publishDate;
                            html += '</a></li>';
                        }
                        html += ' </ul>';
                        $("#lastCommentNews").append(html);
                    }
                }
            });
        }
    </script>
}

