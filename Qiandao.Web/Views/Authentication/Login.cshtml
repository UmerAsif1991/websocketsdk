@model Qiandao.Model.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_LoginLayout.cshtml";
}

<div class="divider row"></div>
<div>
    <form asp-action="Login" asp-controller="Authentication" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
        <div class="form-row">
            <div class="col-md-12">
                <div class="position-relative form-group">
                    <label asp-for="username" class="form-label"></label>
                    <input asp-for="username" class="input100 form-control" placeholder="Username" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="position-relative form-group">
                    <label asp-for="password" class="form-label"></label>
                    <input asp-for="password" type="password" class="input100 form-control" id="PassWordLogin" placeholder="Password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mt-2 mb-4">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" class="custom-control-input" id="customCheck1" />
                        <label class="custom-control-label" for="customCheck1">Remember me</label>
                    </div>
                    <div>
                        <a asp-action="ForgotPassword" asp-controller="Authentication" class="f-w-600">
                            Forgot Password?
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="divider row"></div>
        <div class="align-items-center">
            <div class="ml-auto">
                <button type="submit" class="btn btn-primary btn-lg btn-block" style="background-color: #b39bc1;border-color: #9e84a9;">Login</button>
            </div>
        </div>
    </form>
</div>